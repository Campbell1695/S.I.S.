<p>
  <% if @event.image.url == nil%>
	<%= image_tag "/assets/Mountain.png" %>
	<% else %>
	<%= image_tag @event.image.url %>
<% end %>
</p>
<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @event.description %>
</p>

<h2>Comments</h2>
<%= render @event.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
